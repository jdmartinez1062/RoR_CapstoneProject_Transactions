<%=form_for @group, url: new_group_path, method: :post do |t|%>

<%=render "shared/error_messages", object: t.object%>

<%=t.label :name%>
<%=t.text_field :name%>
<span class="picture">
    <%= t.file_field :icon, accept: 'image/jpeg,image/gif,image/png' %>
</span>
<%=t.submit "Create new group"%>

<%end%>
<script type="text/javascript">
    $('#group_icon').bind('change', function () {
        var size_in_megabytes = this.files[0].size / 1024 / 1024;
        if (size_in_megabytes > 5) {
            alert('Maximum file size is 5MB. Please choose a smaller file.');
        }
    });
</script>