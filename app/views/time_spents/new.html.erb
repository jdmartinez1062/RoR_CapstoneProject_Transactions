<%=form_for @time_spent do |t|%>

<%=render "shared/error_messages", object: t.object%>

<%=t.label :name%>
<%=t.text_field :name%>
<%=t.label :amount%>
<%=t.number_field :amount, step: :any%>
<%=t.collection_select :group, Group.order(:name),:id,:name, {:selected => current_book.authors.map(&:id)} %>

<%=t.submit "Create new group"%>

<%end%>